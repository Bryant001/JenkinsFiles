pipeline {
    agent any
    stages {
        //withCredentials uses credentials plugin with credentials stored in configuration
		stage('Python Stage') {
			steps {
				withCredentials([ usernamePassword (credentialsId: 'veracode_login', usernameVariable: 'VERACODE_API_KEY_ID', passwordVariable: 'VERACODE_API_KEY_SECRET') ]) {
					script { 
						name="Postman_DAST_NodeGoat_v2"
						try {
						sh """
						pip install veracode_api_signing requests
						analysisID==$(http --auth-type=veracode_hmac get "https://api.veracode.com/was/configservice/v1/analyses?name=${name}")
						echo "Scan info: \$analysisID"
						#response=$(http --auth-type=veracode_hmac put "https://api.veracode.com/was/configservice/v1/analyses/3c06f2735ee51041f997a5f43ead0191?method=PATCH")
						#echo $response
						#reply=(echo $response | grep -i JustinDemo | cut -d ',' -f4)
						#echo $reply
						"""
						} catch (err) { 
							echo 'Error code: ' + err.getMessage().substring(26)
						}
					echo 'end of test'
					}
				}
			}
		}
	}
}
